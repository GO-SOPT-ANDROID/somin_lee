<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GOSOPTAndroid" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_300</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/coral_900</item>
        <item name="colorSecondaryVariant">@color/coral_300</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Neutral Key color -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorSurface">@color/grey_50</item>
        <item name="colorOnSurface">@color/grey_800</item>
        <item name="colorSurfaceVariant">@color/grey_100</item>
        <item name="colorOnSurfaceInverse">@color/grey_100</item>
        <item name="colorOnSurfaceVariant">@color/grey_900</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?android:colorBackground</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <!-- 상태바 숨김 -->
        <item name="colorSecondaryContainer">@color/blue_100</item>
        <item name="colorOnSecondaryContainer">@color/blue_800</item>
    </style>
</resources>