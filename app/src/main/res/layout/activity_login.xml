<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/welcome_to_android"
        android:gravity="center"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginTop="100dp"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tvId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/id"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/welcomeText"
        app:layout_constraintStart_toStartOf="@id/welcomeText"
        />

    <EditText
        android:id="@+id/editId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/edit_id_hint"
        android:textColorHint="#9C9C9C"
        app:layout_constraintTop_toBottomOf="@id/tvId"
        app:layout_constraintStart_toStartOf="@id/welcomeText"
        app:layout_constraintEnd_toEndOf="@+id/welcomeText"
        android:importantForAutofill="no"
        android:inputType="text"
        android:maxLength="10"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/tvPw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pw"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/editId"
        app:layout_constraintStart_toStartOf="@id/welcomeText"
        />

    <EditText
        android:id="@+id/editPw"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/edit_pw_hint"
        android:textColorHint="#9C9C9C"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/tvPw"
        app:layout_constraintStart_toStartOf="@id/welcomeText"
        app:layout_constraintEnd_toEndOf="@id/welcomeText"
        android:inputType="textPassword"
        android:maxLength="12"
        android:autofillHints="false" /> <!--inputType을 Password로 설정하면 비번 가려줌!-->

    <Button
        android:id="@+id/btLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="20sp"
        android:text="@string/login"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@id/editPw"
        app:layout_constraintStart_toStartOf="@id/welcomeText"
        app:layout_constraintEnd_toEndOf="@id/welcomeText"
        android:paddingVertical="10dp"
        />

    <Button
        android:id="@+id/btSignUp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="20sp"
        android:text="@string/sign_up"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/welcomeText"
        app:layout_constraintTop_toBottomOf="@id/btLogin"
        app:layout_constraintEnd_toEndOf="@id/welcomeText"
        android:paddingVertical="10dp"
        android:windowSoftInputMode="adjustResize"
        />
</androidx.constraintlayout.widget.ConstraintLayout>