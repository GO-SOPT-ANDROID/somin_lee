<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.login.SignUpActivity">

    <TextView
        android:id="@+id/tvSignUp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/sign_up"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tvSignupId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/id"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#757575"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/tvSignUp"
        app:layout_constraintStart_toStartOf="@id/tvSignUp"
        />

    <EditText
        android:id="@+id/editSignupId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/edit_id_hint"
        android:textColorHint="#9C9C9C"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvSignupId"
        app:layout_constraintStart_toStartOf="@id/tvSignUp"
        app:layout_constraintEnd_toEndOf="@id/tvSignUp"
        android:importantForAutofill="no"
        android:inputType="text"
        android:maxLength="10"
        />

    <TextView
        android:id="@+id/tvSignupPw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pw"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#757575"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/editSignupId"
        app:layout_constraintStart_toStartOf="@id/tvSignUp"
        />

    <EditText
        android:id="@+id/editSignupPw"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/edit_pw_hint"
        android:textColorHint="#9C9C9C"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvSignupPw"
        app:layout_constraintStart_toStartOf="@id/tvSignUp"
        app:layout_constraintEnd_toEndOf="@id/tvSignUp"
        android:inputType="textPassword"
        android:maxLength="12"
        android:autofillHints="false" /> <!--inputType을 Password로 설정하면 비번 가려줌!-->


    <TextView
        android:id="@+id/tvSignupNickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nickname"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#757575"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/editSignupPw"
        app:layout_constraintStart_toStartOf="@id/tvSignUp"
        />

    <EditText
        android:id="@+id/editSignupNickname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/edit_nickname_hint"
        android:textColorHint="#9C9C9C"
        android:layout_marginTop="10dp"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/tvSignupNickname"
        app:layout_constraintStart_toStartOf="@id/tvSignUp"
        app:layout_constraintEnd_toEndOf="@id/tvSignUp"/>

    <TextView
        android:id="@+id/tvSignupIntroduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/intro"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#757575"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/editSignupNickname"
        app:layout_constraintStart_toStartOf="@id/tvSignUp"
        />

    <EditText
        android:id="@+id/editSignupIntroduce"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/edit_intro_hint"
        android:textColorHint="#9C9C9C"
        android:layout_marginTop="10dp"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/tvSignupIntroduce"
        app:layout_constraintStart_toStartOf="@id/tvSignUp"
        app:layout_constraintEnd_toEndOf="@id/tvSignUp"/>


    <Button
        android:id="@+id/btSignUpDone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/sign_up_done"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/editSignupIntroduce"
        app:layout_constraintStart_toStartOf="@id/tvSignUp"
        app:layout_constraintEnd_toEndOf="@id/tvSignUp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>