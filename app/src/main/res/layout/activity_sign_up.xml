<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <TextView
        android:id="@+id/tv_sign_up"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="SIGN UP"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <TextView
        android:id="@+id/tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#757575"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/tv_sign_up"
        app:layout_constraintStart_toStartOf="@id/tv_sign_up"
        />

    <EditText
        android:id="@+id/edit_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/edit_id_hint"
        android:textColorHint="#9C9C9C"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_id"
        app:layout_constraintStart_toStartOf="@id/tv_sign_up"
        app:layout_constraintEnd_toEndOf="@id/tv_sign_up"
        android:importantForAutofill="no"
        android:inputType="text"
        android:maxLength="10"/>

    <TextView
        android:id="@+id/tv_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pw"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#757575"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/edit_id"
        app:layout_constraintStart_toStartOf="@id/tv_sign_up"
        />

    <EditText
        android:id="@+id/edit_pw"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/edit_pw_hint"
        android:textColorHint="#9C9C9C"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_pw"
        app:layout_constraintStart_toStartOf="@id/tv_sign_up"
        app:layout_constraintEnd_toEndOf="@id/tv_sign_up"
        android:inputType="textPassword"
        android:maxLength="12"/> <!--inputType을 Password로 설정하면 비번 가려줌!-->


    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NICKNAME"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#757575"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/edit_pw"
        app:layout_constraintStart_toStartOf="@id/tv_sign_up"
        />

    <EditText
        android:id="@+id/edit_nickname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="별명을 입력하세요"
        android:textColorHint="#9C9C9C"
        android:layout_marginTop="20dp"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/tv_nickname"
        app:layout_constraintStart_toStartOf="@id/tv_sign_up"
        app:layout_constraintEnd_toEndOf="@id/tv_sign_up"/>


    <Button
        android:id="@+id/bt_sign_up_done"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="회원 가입 완료"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/edit_nickname"
        app:layout_constraintStart_toStartOf="@id/tv_sign_up"
        app:layout_constraintEnd_toEndOf="@id/tv_sign_up"/>

</androidx.constraintlayout.widget.ConstraintLayout>